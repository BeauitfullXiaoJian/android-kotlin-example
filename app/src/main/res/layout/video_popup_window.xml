<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/popup_window_bg">

    <View
            android:id="@+id/dismiss_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/menu_container"
            app:cardCornerRadius="0dp"
            app:elevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/padding_lg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="视频XX"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLine"/>

            <TextView
                    android:text="反馈"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>

            <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:rowCount="2"
                    app:columnCount="2">

                <Button
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:background="@drawable/bg_outline_white_click"
                        android:layout_width="0dp"
                        app:layout_columnWeight="1"
                        android:layout_height="@dimen/video_pop_label_size"/>

            </androidx.gridlayout.widget.GridLayout>

            <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_lg"
                    android:background="@drawable/bg_solid_click"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_xl"
                    android:text="取消"
            />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>