<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.DevViewFragment"
             android:id="@+id/container_view">

    <LinearLayout android:id="@+id/draw_toolbar"
                  android:layout_width="match_parent"
                  android:layout_height="60dp"
                  android:orientation="horizontal"
                  android:layout_gravity="bottom"
                  android:paddingBottom="@dimen/margin_md"
                  android:visibility="gone"
                  android:gravity="end">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:tag="colorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_md"
                app:backgroundTint="@color/colorText"
                android:src="@drawable/ic_check_selector"
                android:scaleType="fitCenter"
                app:fabSize="mini"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:tag="colorDanger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_md"
                app:backgroundTint="@color/colorDanger"
                android:src="@drawable/ic_check_selector"
                android:scaleType="fitCenter"
                app:fabSize="mini"/>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:tag="colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_md"
                app:backgroundTint="@color/colorAccent"
                android:src="@drawable/ic_check_selector"
                android:scaleType="fitCenter"
                app:fabSize="mini"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:tag="@string/redo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_md"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_redo_white"
                android:scaleType="fitCenter"
                app:fabSize="mini"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:tag="@string/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_md"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_save"
                android:scaleType="fitCenter"
                app:fabSize="mini"/>

    </LinearLayout>
</FrameLayout>
