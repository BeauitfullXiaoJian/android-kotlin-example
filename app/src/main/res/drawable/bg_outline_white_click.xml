<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"
          android:state_selected="false">
        <shape>
            <stroke android:color="@color/colorLine" android:width="1dp"/>
            <solid android:color="@color/colorWhite"/>
            <corners android:radius="@dimen/radius_sm"/>
        </shape>
    </item>
    <item android:state_pressed="true"
          android:state_selected="true">
        <shape>
            <stroke android:color="@color/colorLight" android:width="1dp"/>
            <solid android:color="@color/colorLight"/>
            <corners android:radius="@dimen/radius_sm"/>
        </shape>
    </item>
    <item android:state_pressed="false"
          android:state_selected="true">
        <shape>
            <stroke android:color="@color/colorLightPrimary" android:width="1dp"/>
            <solid android:color="@color/colorWhite"/>
            <corners android:radius="@dimen/radius_sm"/>
        </shape>
    </item>
</selector>